<h1 class="text-3xl font-bold mb-6">ğŸ˜‚ Random Joke Generator</h1>

<div data-controller="form" data-action="turbo:submit-start->form#submit turbo:submit-end->form#reset">
  <%= form_with url: "/jokes", method: :post, data: { turbo_frame: "joke_result" }, class: "space-y-4" do |form| %>
    <%= form.label :category, "Choose a category", class: "block font-semibold" %>
    <%= form.select :category, ["Programming", "Misc", "Dark", "Pun", "Spooky", "Christmas"], {}, class: "border rounded px-4 py-2 w-full" %>

    <div class="flex items-center gap-4">
      <%= form.submit "Get Joke", class: "bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 transition", data: { form_target: "button" } %>

      <span class="text-sm text-gray-500 hidden" data-form-target="loading">
        ğŸ¤¡ Getting your joke...
      </span>
    </div>
  <% end %>
</div>

<%= turbo_frame_tag "joke_result" do %>
  <p class="text-gray-500 mt-4">Choose a category and get ready to laugh!</p>
<% end %>
