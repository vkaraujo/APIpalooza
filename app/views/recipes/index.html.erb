<h1 class="text-3xl font-bold mb-6">🍔 Recipe Finder</h1>

<%= form_with url: "/recipes", method: :post, data: { turbo_frame: "recipes_result" }, class: "space-y-4" do |form| %>
  <%= form.label :ingredient, "Enter a keyword (e.g., mushrooms)", class: "block font-semibold" %>
  <%= form.text_field :ingredient, class: "border rounded px-4 py-2 w-full" %>
  <%= form.submit "Find Recipes", class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600" %>
<% end %>

<%= turbo_frame_tag "recipes_result" do %>
  <p class="text-gray-500">Search for recipes by ingredient.</p>
<% end %>
