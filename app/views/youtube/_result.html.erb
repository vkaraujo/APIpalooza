<%= turbo_frame_tag "youtube_result" do %>
  <div class="mt-6">
    <h2 class="text-2xl font-bold mb-6 text-center">🎬 Top results for “<%= query %>”</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% videos.each do |video| %>
        <div class="border rounded-lg shadow-md p-4 bg-white flex flex-col items-center">
          <h3 class="text-md font-semibold text-center mb-2"><%= video[:title] %></h3>

          <div class="w-full aspect-video">
            <iframe
              class="w-full h-full rounded"
              src="https://www.youtube.com/embed/<%= video[:video_id] %>"
              title="YouTube video player"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen>
            </iframe>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
