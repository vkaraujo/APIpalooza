<section class="bg-white">
  <div class="container mx-auto px-4 py-16">
    <h2 class="text-4xl font-extrabold text-center text-gray-900 mb-16">🎸 The Lineup</h2>

    <% api_lineup.each_with_index do |api, i| %>
      <div class="flex flex-col md:flex-row <%= i.odd? ? 'md:flex-row-reverse' : '' %> items-center">
        <div class="md:w-1/2">
          <img src="<%= api["image"] %>" alt="<%= api["name"] %> image"
            class="w-full h-64 object-cover shadow-md">
        </div>
        <div class="md:w-1/2 bg-gradient-to-r <%= i.even? ? 'from-yellow-200 to-yellow-100' : 'from-pink-200 to-purple-100' %> p-10">
          <h3 class="text-3xl font-bold mb-3 text-gray-900"><%= api["icon"] %> <%= api["name"] %></h3>
          <p class="text-gray-800 text-lg mb-2"><%= api["description"] %></p>
          <p class="italic text-sm text-gray-600">Greatest Hit: “<%= api["hit"] %>”</p>
        </div>
      </div>
    <% end %>
  </div>
</section>
